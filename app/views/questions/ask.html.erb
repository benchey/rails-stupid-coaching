
<form action="answer" class="form-group">
  <div class="form-row">
    <div class="col-xs-6">
      <h1>Stupid coaching</h1>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="questionToYourCoach">Ask your coach anything</label>
      <div class="form-inline">
        <input type="text" name="question" class ="form-control" placeholder="Type a question here">
        <input type="submit" value="Ask!" class="btn btn-primary text-inline">
      </div>
    </div>
  </div>
</form>
